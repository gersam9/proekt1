@model IEnumerable<proekt1.Models.Plane>

<style>
    body {
        background-color: #fff1d5;
    }
</style>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxBusinessSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxBusinessSeats)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlaneID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlaneID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlaneID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
